.lunbo {
  margin: 0 20rpx;
}
.background-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
  background: #ff6700;
}

.tab {
  color: #999;
  font-size: 30rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 3rpx solid #ccc;
}
.tab view.tab-item {
  width: 100rpx;
  text-align: center;
  margin-bottom: -3rpx;
  border-bottom: 3rpx solid transparent;
}
.tab view.tab-item.active {
  color: #333;
  font-weight: bold;
  border-color: #ff6700;
}