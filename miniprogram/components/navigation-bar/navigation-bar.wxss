.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  color: #fff;
  background: #ff6700;
  display: flex;
  justify-content: start;
  z-index: 1;
  /* border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%; */
}
.nav-bar text.msg { 
  margin: 8rpx 60rpx 0 40rpx;
}
.nav-bar .search {
  color: #333;
  font-size: 14px;
  background: #fff;
  border-radius: 50px;
  padding-left: 14px;
}
.weui-search-bar__box {
  position: relative;
  width: 50%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-icon-search_in-box {
  position: absolute;
  left: -15px;
  top: 0;
  /* border-radius: 50%; */
  border-top-left-radius: 100%;
  border-bottom-left-radius: 100%;
  background: #fff;
  text-align: center;
}